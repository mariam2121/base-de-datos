const mongoose = require('mongoose');
const bcrypt = require('bcrypt');
const Schema = mongoose.Schema;


const usuarioSchema = new Schema({
  nombre: { type: String, required: true },
  contrase単a: { type: String, required: true }
});



const salt = await bcrypt.genSalt(10); 
const hashedPassword = await bcrypt.hash(usuario.contrase単a, salt); 
usuario.contrase単a = hashedPassword;
    



usuarioSchema.methods.comparePassword = (candidatePassword) =>{
  return bcrypt.compare(candidatePassword, this.contrase単a);
};

const Usuario = mongoose.model('Usuario', usuarioSchema);

module.exports = Usuario;

